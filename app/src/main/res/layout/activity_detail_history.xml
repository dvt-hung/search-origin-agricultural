<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.DetailHistoryActivity"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/custom_toolbar">

            <ImageView
                android:id="@+id/img_Option_Detail_History"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:padding="5dp"
                android:src="@drawable/ic_dot" />

            <ImageView
                android:id="@+id/img_Back_Detail_History"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:src="@drawable/ic_close" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/title_detail_history"
                android:fontFamily="@font/coiny"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="18sp"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_Date_History_Detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="30/08/1999"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="@color/green2"
            android:textStyle="bold"
            android:textSize="20sp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_Images_History"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/description"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/txt_Des_History_Detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:textColor="@color/gray2"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/txt_Info_Author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_author"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="30dp"
            android:textStyle="bold"
            app:drawableEndCompat="@drawable/ic_right"
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/txt_TypeFactory_History_Detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/title_type_factory"
            android:textColor="@color/green"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/title_nameFactory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/name_factory"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="5dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_NameFactory_History_Detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:padding="5dp"
            android:textColor="@color/gray2"
            android:layout_marginTop="5dp"
            android:textSize="16sp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:padding="5dp"
            android:text="@string/title_address"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="30dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_AddressFactory_History_Detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="3dp"
            android:padding="5dp"
            android:text="@string/name_factory"
            android:textColor="@color/gray2"
            android:textSize="16sp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="@string/title_phone"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="30dp"

            />

        <TextView
            android:id="@+id/txt_PhoneFactory_History_Detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="3dp"
            android:padding="5dp"
            android:textColor="@color/gray2"
            android:textSize="16sp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="@string/title_web"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="30dp"
            />

        <TextView
            android:id="@+id/txt_WebFactory_History_Detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="30dp"
            android:padding="5dp"
            android:textSize="16sp"
            android:textColor="@color/gray2" />
    </LinearLayout>


</androidx.core.widget.NestedScrollView>