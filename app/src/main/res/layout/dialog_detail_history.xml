<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    android:layout_margin="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/txt_Image_Detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="15dp"
            android:fontFamily="@font/basic"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="@string/title_image_detail"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/ic_change_image" />

        <TextView
            android:id="@+id/txt_Info_Detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_detail_info"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:padding="5dp"
            android:fontFamily="@font/basic"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:drawablePadding="15dp"
            app:drawableStartCompat="@drawable/ic_detail" />

        <TextView
            android:id="@+id/txt_Delete_Detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_delete"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:padding="5dp"
            android:textStyle="bold"
            android:fontFamily="@font/basic"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:drawablePadding="15dp"
            app:drawableStartCompat="@drawable/ic_delete_dialog"
            />

        <Button
            android:id="@+id/btn_Cancel_Detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_cancel"
            android:backgroundTint="@null"
            app:backgroundTint="@null"
            android:background="@drawable/custom_edittext"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="30dp"
            />

    </LinearLayout>
</androidx.cardview.widget.CardView>