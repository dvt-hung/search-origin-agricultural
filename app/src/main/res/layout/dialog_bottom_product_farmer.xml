<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="15dp"
    android:layout_marginBottom="20dp"
    >


    <Button
        android:id="@+id/btn_InsertHistory_OptionProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@null"
        app:backgroundTint="@null"
        android:background="@drawable/custom_button_confirm"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:text="@string/insert_history"
        android:textStyle="bold"

        />
    <Button
        android:id="@+id/btn_Update_OptionProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@null"
        app:backgroundTint="@null"
        android:background="@drawable/custom_button_confirm"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:text="@string/title_update"
        android:textStyle="bold"

        />

    <Button
        android:id="@+id/btn_Delete_OptionProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@null"
        app:backgroundTint="@null"
        android:background="@drawable/custom_button_delete"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:text="@string/title_delete"
        android:textStyle="bold"

        />


</LinearLayout>