<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:padding="10dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:text="@string/detail_product"
        android:background="@drawable/top_dialog"
        android:gravity="center"
        android:fontFamily="@font/coiny"
        android:textSize="16sp"
        android:textColor="@color/white"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_dialog"
        >

        <ImageView
            android:id="@+id/img_Detail_Product"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/logo"
            android:layout_centerHorizontal="true"
            />

<!--        -->
        <TextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_Detail_Product"
            android:layout_marginStart="40dp"
            android:layout_marginTop="8dp"
            android:text="@string/name_product"
            android:textColor="@color/black"

            />

        <TextView
            android:id="@+id/txt_Name_Detail_Product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_Detail_Product"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="40dp"
            android:layout_toEndOf="@id/title_name"
            android:text="@string/name_product" />

<!--        -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_Name_Detail_Product"
            android:layout_marginStart="40dp"
            android:layout_marginTop="8dp"
            android:text="@string/price_product"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txt_Price_Detail_Product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_Name_Detail_Product"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="40dp"
            android:layout_toEndOf="@id/title_name"
            android:text="@string/name_product" />

<!--        -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_Price_Detail_Product"
            android:layout_marginStart="40dp"
            android:layout_marginTop="8dp"
            android:text="@string/quantity_product"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txt_Quantity_Detail_Product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_Price_Detail_Product"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="40dp"
            android:layout_toEndOf="@id/title_name"
            android:text="@string/name_product" />
<!--        -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_Quantity_Detail_Product"
            android:layout_marginStart="40dp"
            android:layout_marginTop="8dp"
            android:text="@string/quantity_sold_product"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txt_QuantitySold_Detail_Product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_Quantity_Detail_Product"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="40dp"
            android:layout_toEndOf="@id/title_name"
            android:text="@string/name_product" />
<!-- -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_QuantitySold_Detail_Product"
            android:layout_marginStart="40dp"
            android:layout_marginTop="8dp"
            android:text="@string/date_product"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txt_Date_Detail_Product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_QuantitySold_Detail_Product"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="40dp"
            android:layout_toEndOf="@id/title_name"
            android:text="@string/name_product" />
<!--        -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_Date_Detail_Product"
            android:layout_marginStart="40dp"
            android:layout_marginTop="8dp"
            android:text="@string/description_product"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txt_Des_Detail_Product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_Date_Detail_Product"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="40dp"
            android:layout_toEndOf="@id/title_name"
            android:text="@string/name_product" />

        <Button
            android:id="@+id/btn_Cancel_Detail_Product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@null"
            app:backgroundTint="@null"
            android:background="@drawable/custom_button_confirm"
            android:layout_below="@id/txt_Des_Detail_Product"
            android:layout_centerHorizontal="true"
            android:text="@string/close"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            />

    </RelativeLayout>

</LinearLayout>

